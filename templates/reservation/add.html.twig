<script>
var expanded = false;

function showCheckboxes() {
  var checkboxes = document.getElementById("checkboxes");
    
  var checkboxes2 = document.getElementsByName("decoration");
            
            var result = "";
            var idsD = [];
  

            for (var i = 0; i < checkboxes2.length; i++) {
                if (checkboxes2[i].checked) {
                    result += checkboxes2[i].value 
                        + "*";
                    idsD.push(checkboxes2[i].value);
                }
            }
            
            //alert("Decoration selectionne: " + result+" tab : "+idsD.join(","));
            
            var inputF = document.getElementById("Tvofdecoration");
            
            inputF.value =  idsD ;

  if (!expanded) {
    checkboxes.style.display = "block";
    expanded = true;
  } else {
    checkboxes.style.display = "none";
    expanded = false;
  }
}


</script>

